@page
@model EditFormModel
@{

}

    <form method="post">
        <input type="hidden" asp-for="Employee.Id" />
        <input type="hidden" asp-for="InitDate" />
        <input type="hidden" asp-for="InitUid" />
        <div class="form-group form-row">
            <label class="col-form-label col-2" asp-for="Employee.Empno"></label>
            <input class="form-control col-8" asp-for="Employee.Empno" />
        </div>
        <div class="form-group form-row">
            <label class="col-form-label col-2" asp-for="Employee.Name"></label>
            <input class="form-control col-8" asp-for="Employee.Name" />
        </div>
        <div class="form-group form-row">
            <label class="col-form-label col-2" asp-for="Employee.Sex"></label>
            <select class="form-control col-8" asp-for="Employee.Sex" asp-items="Html.GetEnumSelectList(typeof(Razor.Training.Models.Sex))"></select>
        </div>
        <div class="form-group form-row">
            <label class="col-form-label col-2" asp-for="Employee.EnterDate"></label>
            <input class="form-control col-8" asp-for="Employee.EnterDate" readonly />
        </div>
        <div class="form-group form-row">
            <label class="col-form-label col-2" asp-for="Employee.Email"></label>
            <input class="form-control col-8" asp-for="Employee.Email" />
        </div>
        <div class="form-group form-row">
            <label class="col-form-label col-2" asp-for="Employee.Autobiography"></label>
            <textarea class="form-control col-8" rows="3" asp-for="Employee.Autobiography"></textarea>
        </div>
        <button class="btn btn-primary">Save</button>
    </form>

<div class="modal fade" id="ErrorModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">提示訊息</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <span>@Html.Raw(@Model.ValidateMessage)</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@
    <script>
        $(function () {
            if ($('#ErrorModal .modal-body span').text() != '')
                $('#ErrorModal').modal('show');
        });
    </script>
}